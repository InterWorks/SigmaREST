{
    "name": "interworks/sigmarest",
    "description": "This package allows simple REST API communication with Sigma.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "InterWorks\\SigmaREST\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InterWorks\\SigmaREST\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "InterWorks\\SigmaREST\\SigmaRESTServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "Justin Lyons",
            "email": "justin.lyons@interworks.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.9",
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
